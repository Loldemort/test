@model web.Models.Users

@{
    ViewData["Title"] = "Delete";
}

<h1>Izbris profila</h1>

<h3>Ali ste prepričani da želite izbrisati profil?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ime:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.firstName)
        </dd>
        <dt class = "col-sm-2">
            Priimek:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lastName)
        </dd>
        <dt class = "col-sm-2">
            Čas kosila:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lunchTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="userId" />
        <input type="submit" value="Izbris" class="btn btn-danger" /> |
        <a asp-action="Index">Nazaj na seznam</a>
    </form>
</div>
